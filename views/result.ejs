<%- include("./partials/header") %>

    <head>
        <style>
            #movie-img {
                width: 100%;
                height: 70%;
            }

            .card-title {
                font-size: 1.4em;
                font-weight: bold;
            }

            .row {
                padding-top: 5%;
            }
        </style>
    </head>


    <ul>
        <div class="container-fluid ml-5 ">
            <div class="row">
                <%movieData['Search'].forEach(function(movie){%>

                    <div id="movie-card" class="card m-5 p-0 border-0 col-2 " style="width: 15rem;">
                        <img id="movie-img" src="<%=movie.Poster%>" class="card-img-top"
                            alt=" Here lies <%=movie.Title%>">
                        <div class="card-body d-flex align-items-start flex-column bd-highlight">
                            <section class="card-title d-none d-lg-block mb-auto bd-highlight">
                                <%=movie.Title%>
                            </section>

                            <a href="/result/<%=movie.imdbID%>" class="btn btn-primary p-2 bd-highlight ">Know More</a>
                        </div>
                    </div>


                    <%})%>
            </div>
        </div>
    </ul>


    <%- include("./partials/footer")%>